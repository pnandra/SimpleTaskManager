@model SimpleTaskManagerMVC.Models.SimpleTask

@{
    ViewData["Title"] = "Delete Task"; 
}

<h1>Delete Task</h1>

<h3>Are you sure you want to delete "@Html.DisplayFor(model => model.Name)"?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Task Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Due Date
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DueDateString)
        </dd>        
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Yes" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-default">No</a>
    </form>
</div>
